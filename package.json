{
  "name": "tsumo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -w @tsumo/engine build && npm run -w tsumo-cli build",
    "typecheck": "npm run -w @tsumo/engine build && npm run -w tsumo-cli typecheck",
    "test": "npm run -w @tsumo/engine test",
    "selftest": "bash ./scripts/selftest.sh"
  },
  "devDependencies": {
    "tsonic": "0.0.43",
    "@tsonic/tsbindgen": "0.7.35",
    "@tsonic/core": "10.0.9",
    "@tsonic/dotnet": "10.0.10",
    "@tsonic/globals": "10.0.10",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
